#!/usr/bin/env bash

set -e

unnecessary_blocks=(
    --remove-section=.eh_frame
    --remove-section=.gnu.version
    --remove-section=.hash
)

main() {
    local name=$(basename "$1" .asm)
    if [[ "$2" == '--debug' ]]; then
        nasm -ggdb  -f elf64 "$1"
    else
        nasm -f elf64 "$1"
    fi


    if grep -q '##LINK_LIBC##' "$1"; then
        compile_c_code "$name".asm
        ld -o "$name" -dynamic-linker /lib64/ld-linux-x86-64.so.2 -lc --entry=main *.o
    else
        ld -o "$name" "$name".o
    fi

    if [[ "$2" != '--debug' ]]; then
        strip --strip-all --discard-all "$name"
        strip "${unnecessary_blocks[@]}" "$name"
    fi
    rm *.o
}

compile_c_code() {
    local c_files=($(sed -rn 's/.*##COMPILE_C## (.*)/\1/p' "$1"))
    for c_file in "${c_files[@]}"; do
        gcc -c "$c_file"
    done
}

main "$@"
